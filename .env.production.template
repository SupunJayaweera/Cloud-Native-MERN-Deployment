# Production Environment Configuration Template
# ============================================
# IMPORTANT: Copy this to .env.production and update with actual production values
# DO NOT commit production secrets to version control

# Application Environment
NODE_ENV=production
APP_NAME="Hotel Booking System"
APP_VERSION="1.0.0"

# Production Domain
DOMAIN=yourdomain.com
FRONTEND_URL=https://yourdomain.com
API_BASE_URL=https://api.yourdomain.com

# Service URLs (Production)
USER_SERVICE_URL=https://api.yourdomain.com/user
HOTEL_SERVICE_URL=https://api.yourdomain.com/hotel
ROOM_SERVICE_URL=https://api.yourdomain.com/room
BOOKING_SERVICE_URL=https://api.yourdomain.com/booking
PAYMENT_SERVICE_URL=https://api.yourdomain.com/payment
NOTIFICATION_SERVICE_URL=https://api.yourdomain.com/notification

# Database Configuration (Production MongoDB)
# Use MongoDB Atlas or your production MongoDB cluster
MONGODB_USER=your_production_db_user
MONGODB_PASSWORD=your_production_db_password
MONGODB_CLUSTER=your_cluster.mongodb.net
MONGODB_OPTIONS=retryWrites=true&w=majority

# Production MongoDB URIs
USER_MONGODB_URI=mongodb+srv://${MONGODB_USER}:${MONGODB_PASSWORD}@${MONGODB_CLUSTER}/userdb?${MONGODB_OPTIONS}
HOTEL_MONGODB_URI=mongodb+srv://${MONGODB_USER}:${MONGODB_PASSWORD}@${MONGODB_CLUSTER}/hoteldb?${MONGODB_OPTIONS}
ROOM_MONGODB_URI=mongodb+srv://${MONGODB_USER}:${MONGODB_PASSWORD}@${MONGODB_CLUSTER}/roomdb?${MONGODB_OPTIONS}
BOOKING_MONGODB_URI=mongodb+srv://${MONGODB_USER}:${MONGODB_PASSWORD}@${MONGODB_CLUSTER}/bookingdb?${MONGODB_OPTIONS}
PAYMENT_MONGODB_URI=mongodb+srv://${MONGODB_USER}:${MONGODB_PASSWORD}@${MONGODB_CLUSTER}/paymentdb?${MONGODB_OPTIONS}
NOTIFICATION_MONGODB_URI=mongodb+srv://${MONGODB_USER}:${MONGODB_PASSWORD}@${MONGODB_CLUSTER}/notificationdb?${MONGODB_OPTIONS}

# RabbitMQ Configuration (Production)
# Use CloudAMQP or your production RabbitMQ cluster
RABBITMQ_URL=amqps://username:password@your-rabbitmq-instance.cloudamqp.com/vhost

# Security Configuration (CHANGE THESE!)
JWT_SECRET=your-super-secure-jwt-secret-change-this-in-production
JWT_EXPIRES_IN=24h
BCRYPT_SALT_ROUNDS=12

# SSL Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# Rate Limiting (Stricter for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Email Configuration (Production)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=true
EMAIL_USER=your-production-email@yourdomain.com
EMAIL_PASS=your-app-password

# Payment Gateway (Production)
STRIPE_SECRET_KEY=sk_live_your_production_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_production_stripe_publishable_key

# Monitoring & Logging
LOG_LEVEL=error
SENTRY_DSN=your_sentry_dsn
NEW_RELIC_LICENSE_KEY=your_new_relic_key

# Redis Configuration (for sessions/caching)
REDIS_URL=redis://username:password@your-redis-instance:port

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
S3_BACKUP_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
